<% provide(:body_class, "ranking-page") %>
<!--Start of Banner section-->
<section class="main-banner-section">
    <div class="container-fluid no-padding">
        <div class="banner-container banner-container-wine">
            <div class="container">
                <div class="row">
                    <div class="category-title col-xs-12 col-sm-12 col-lg-12">
                        <span class="separator" style="margin-left: 20px;" >Top Wine |</span>
                        <span class="date-container "> <%= DateTime.now.strftime "%B %Y" %></span>
                    </div>
                    <h1 class="places-container col-xs-12 col-sm-12 col-lg-12">Wine</h1>
                </div>
            </div>
        </div>
    </div>
</section>
<!--End of Banner section-->
<!--Start of places list section-->
<section class="places-list-section">
    <% @wines.each_with_index do |wine, index| %>
    <div class="place-container container no-padding">
              <div class="col-md-3 no-padding">
                <a href="<%= wines_path%>">
                    <img src="uploads/<%= wine.pic%>" class="img-responsive">
                </a>
            </div>

              <div class="col-md-8 col-sm-12 col-xs-12 info-container">
                <div class="header-section">
                    <div class="number-container"><%= index+1 %></div>
                    <div class="separator"></div>
                    <div class="name-container">
                        <div class="title-container"><%= set_title wine.name %></div>
                    </div>
                </div>
                <div class="main-text-container">
                    <p>
                      <%= wine.short_des %>
                  </p>
              </div>
              <div class="wine-long_description">
                <span>
                    <%= wine.long_des %>
                </span>
            </div>
            <div class="wine-region">
               <strong>Regions:</strong>
               <span>
                <% unless wine.regions == nil %>
                <% wine.regions.split(',').each do |element| %>
                <a href="#">
                    <span><%=  element %></span>
                  <% end %>
                    </span>
                </a>
            <% end %>
            </div>
              <div class="wine-supplyer">
                 <strong>Supplyer:</strong>
                 <span>
                    <% unless wine.supply == nil %>
                    <% wine.supply.split(',').each_with_index do |element,index| %>
                    <a href="<%= wine.supply_url.split(',').fetch(index) %>">
                      <span><%=  element %></span>
                      <% end %>
                    </span>
                    </a>
                    <% end %>
                </span>
            </div>
</div>
</div>
<!--end of place container-->                          
<% end %>    
</section>

